    <body>
        <%- include('../includes/navigation.ejs') %>
            <div class="container">
                <div class="row">
                    <div>
                        <span>Hello <b><%= staff.name%></b></span>
                    </div>
                    <div class="alert alert-secondary text-center" role="alert">     
                            <h1>CHECK IN</h1> 
                    </div>
                </div>
                

                <div class="container">
                    <div class="row text-center">
                        <form action="/attendanceCheckIn" method="POST" class="row g-3">
                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <label for="inputState" class="form-label">Work Place</label>
                                <select name="workplace" id="inputState" class="form-select mb-3">
                                    <option value="home" selected>Home</option>
                                    <option value="company">Company</option>
                                    <option value="customer">Customer</option>
                                </select>

                                <input class="form-control" type="hidden" name="checkIn" value="<%= new Date() %>" >
                                <button type="submit" class="btn btn-primary btn-lg w-100">Check In</button>
                            </div>
                            <div class="col-md-4"></div>
                            
                        </form>
                    </div>
                </div>
            </div>

            <%- include('../includes/end.ejs') %>
    </body>