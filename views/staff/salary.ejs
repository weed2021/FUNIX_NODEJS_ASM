<%- include('../includes/head.ejs') %>

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

        <div class="container mt-5">
            <div class="alert alert-secondary" role="alert">
                <div class="row">
                    <h3>Salary Search</h3>
                </div>
                <form action="/postSalary" method="POST" class="row">
                   
                    <div class="col-md-4 mt-2">
                        <select name = "month" class="form-select">
                            <option selected value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                        <!-- <input type="hidden" value="11" name='month'> -->
                    <div class="col-md-2 mt-2">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-primary w-100">Search</button>
                    </div>  
                </form>
              </div>  
        </div>

        <div class="container mt-5">
            <table class="table">
                <thead>
                    <tr class="table-success">
                    <th scope="col"><h3>Month</h3></th>
                    <th scope="col"><h3>Salary</h3></th>
                    </tr>
                    <tr>
                    <th scope="col"><h4><%=month%></h4></th>
                    <th scope="col"><h4><%=Math.round(salary)%><sup>Ä‘</sup></h4></th>
                    </tr>
                </thead>  
                </tbody>
        </div>

        

            
            <%- include('../includes/end.ejs') %>
  