<%- include('../includes/head.ejs') %>
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

      <% if (!isManager) { %>
        <div class="container">
          <div class="container mt-5">
            <div class="alert alert-primary" role="alert">
              <h2>Body Temporature</h2>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Celsius</th>
                  <td scope="col">
                    <%=celsius%>
                  </td>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">Registration Date</th>
                  <td>
                    <%=dateRegister%>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <hr>
          <div class="container mt-5">
            <div class="alert alert-primary" role="alert">
              <h2>Vaccine</h2>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">
                    <h3>First Vaccine</h3>
                  </th>
                  <td></td>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="col">Type</th>
                  <td>
                    <%=type1%>
                  </td>
                </tr>
                <tr>
                  <th scope="row">Date</th>
                  <td>
                    <%=dateInjection1%>
                  </td>
                </tr>
              </tbody>

              <thead>
                <tr>
                  <th scope="col">
                    <h3>Second Vaccine</h3>
                  </th>
                  <td></td>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <th scope="row">Type</th>
                  <td>
                    <%=type2%>
                  </td>
                </tr>
                <tr>
                  <th scope="row">Date</th>
                  <td>
                    <%=dateInjection2%>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <hr>
          <div class="container mt-5">
            <div class="alert alert-primary" role="alert">
              <h2>Covid Infection</h2>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Status</th>
                  <td scope="col">
                    <%=(infection===0) ? "Negative" : "Positive" %>
                  </td>
                </tr>
              </thead>
            </table>
          </div>
          <div class="container">
            <a href="/edit-covid" class="btn btn-primary btn-lg w-100">Update</a>
          </div>
        </div>
        <% } else { %>
          <!-- Button create invoice -->
          <div class="container mb-5 mt-5">
            <a href="/getCovidStatus" class="btn btn-primary">Download Report</a>
          </div>
          <!-- End -->

          <div class="container mt-5">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Temporature</th>
                  <th scope="col">Date</th>
                  <th scope="col">First Vc</th>
                  <th scope="col">Date</th>
                  <th scope="col">Second Vc</th>
                  <th scope="col">Date</th>
                  <th scope="col">Status</th>
                </tr>
              </thead>
              <tbody>
                <% for( let record of listRecord ) { %>
                  <% if (record) { %>
                    <tr>
                      <th scope="row">1</th>
                      <td>
                        <%= record.staffId.name %>
                      </td>
                      <td>
                        <%=record.bodyTemporature.celsius%>
                      </td>
                      <td>
                        <%=record.bodyTemporature.dateRegister.getDate() %>/
                          <%=record.bodyTemporature.dateRegister.getMonth()===0 ? '01' :
                            record.bodyTemporature.dateRegister.getMonth() %>/
                            <%=record.bodyTemporature.dateRegister.getFullYear()%>
                      </td>
                      <td>
                        <%=record.vaccine.first.type%>
                      </td>
                      <td>
                        <%=record.vaccine.first.dateInjection1.getDate()%>/
                          <%=record.vaccine.first.dateInjection1.getMonth()===0 ? '01' :
                            record.vaccine.first.dateInjection1.getMonth()%>/
                            <%=record.vaccine.first.dateInjection1.getFullYear()%>
                      </td>

                      <td>
                        <%=record.vaccine.second.type%>
                      </td>

                      <td>
                        <%=record.vaccine.second.dateInjection2.getDate()%>/
                          <%=record.vaccine.second.dateInjection2.getMonth()===0 ? '01' :
                            record.vaccine.second.dateInjection2.getMonth()%>/
                            <%=record.vaccine.second.dateInjection2.getFullYear()%>
                      </td>

                      <td>
                        <%=(record.infection===0) ? "Negative" : "Positive" %>
                      </td>
                    </tr>
                    <% } %>
                      <% } %>
              </tbody>
            </table>
          </div>
          <% } %>


            <%- include('../includes/end.ejs') %>
  </body>