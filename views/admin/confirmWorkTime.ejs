<%- include('../includes/head.ejs') %>
    </head>
    <body>
        <%- include('../includes/navigation.ejs') %>
        <div class="container">
            <div class="row">
        <% for( let staff of staffs ) { %>
                    <div class="col-sm-6 col-md-3 mt-5">
                        <div class="card text-center ">     
                            <img src="<%= staff.image %> " class="card-img-top" alt="Staff Work">
                            <div class="card-footer">
                                <form action="/confirmTimeWork/<%= staff._id %>" method="POST">
                                        <select name = "month" class="form-select">
                                            <option selected value="1">January</option>
                                            <option value="2">February</option>
                                            <option value="3">March</option>
                                            <option value="4">April</option>
                                            <option value="5">May</option>
                                            <option value="6">June</option>
                                            <option value="7">July</option>
                                            <option value="8">August</option>
                                            <option value="9">September</option>
                                            <option value="10">October</option>
                                            <option value="11">November</option>
                                            <option value="12">December</option>
                                        </select>
                                        
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn btn-primary w-100 btn-lg" type="submit"><%= staff.name %></button>
                                </form>
                            </div>       
                        </div>
                    </div>            
        <% } %>
            </div>
        </div>

<%- include('../includes/end.ejs') %>